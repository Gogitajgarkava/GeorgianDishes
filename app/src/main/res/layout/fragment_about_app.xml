<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="15dp">

        <TextView
            android:id="@+id/textViewTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App created by: Jgarkavas Industries"
            android:layout_margin="15dp"
            android:textSize="15sp"
            android:drawableLeft="@drawable/team"
            android:drawablePadding="45dp"/>

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App version: 1.0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="15sp"
            android:drawableLeft="@drawable/app"
            android:drawablePadding="45dp"/>

        <TextView
            android:id="@+id/textViewDevelopers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developers: Jgarkava Gogita\n                      Lasha Tsikaridze"

            android:layout_margin="15dp"
            android:textSize="15sp"
            android:drawableLeft="@drawable/developers"
            android:drawablePadding="45dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewAboutApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About App"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        />
</FrameLayout>
